<Window x:Class="MultiStreamVlc.ChangeUrlDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Stream URL" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Tile (1-6)" Margin="0,0,0,4"/>
            <ComboBox x:Name="TileCombo" Width="260" SelectedIndex="0">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="M3U8 URL" Margin="0,0,0,4"/>
            <TextBox x:Name="UrlText" Width="520" MinWidth="520"
                     AcceptsReturn="True" TextWrapping="Wrap" Height="80"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="90" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="OK" Width="90" IsDefault="True" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
